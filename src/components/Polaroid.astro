---
interface Props {
  title: string;
  img: string;
  side: string;
}

const { img, title, side } = Astro.props;
const rotate = `transform: rotate(${((Math.random() * 60) + 10) - 35}deg)`;
const float = side ? `float: ${side}` : ``;
const style = `${float}; ${rotate};`;

---
<style>
  div {
    box-shadow: 0 0 10px #00000040;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10px;
    background-color: var(--background2);
    max-width: 300px;
    & > * {
      background-color: var(--background2);
    }
    margin: 2rem;
  }
  p {
    font-family: 'Luciole-Regular-Italic', sans-serif;
    text-align: center;
  }
</style>
<div style={style}>
  <img src={img} alt={title} />
  <p>{title}</p>
</div>
