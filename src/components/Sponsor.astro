---
interface Props {
  title: string;
  href: string;
  img: string;
}

const { href, title, img } = Astro.props;
---
<style>
  div {
    justify-self: center;

    width: 23%;

    border-radius: 5px;
    box-shadow: 0 0 10px #00000040;
  }
  a {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    border: 3px solid transparent;
  }
  img {
    max-height: 100px;
  }
  div:hover {
    box-shadow: unset;
    background-color: var(--background2);
    border-color: 3px solid var(--orange);
  }
</style>
<div>
  <a href={href}>
    <img src={img} alt={title} />
  </a>
</div>

